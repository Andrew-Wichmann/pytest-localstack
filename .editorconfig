# http://editorconfig.org

root = true

[*]
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,md,rst}]
indent_style = space

[*.{ini,cfg,bat}]
indent_style = tab

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2
